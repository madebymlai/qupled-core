# ===========================================
# Examina Cloud - Environment Configuration
# ===========================================
# Copy this to .env and fill in values

# ----- Database -----
DATABASE_URL=postgresql://examina:examina@localhost:5432/examina
# For production: use connection pooling (pgbouncer)

# ----- Redis -----
REDIS_URL=redis://localhost:6379/0

# ----- JWT Authentication -----
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ----- CORS -----
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ----- LLM Providers (from examina-core) -----
DEEPSEEK_API_KEY=
GROQ_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Default provider profile for new users
DEFAULT_PROVIDER_PROFILE=free

# ----- Stripe Payments -----
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PRO_MONTHLY=price_...
STRIPE_PRICE_ID_PRO_YEARLY=price_...

# ----- Email (optional) -----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@examina.io

# ----- Sentry (error tracking) -----
SENTRY_DSN=

# ----- Environment -----
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ----- File Storage -----
# For PDF uploads - use S3 in production
STORAGE_BACKEND=local
# STORAGE_BACKEND=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=examina-uploads
# AWS_REGION=eu-west-1

# ----- Rate Limiting -----
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_ANALYSIS_PER_DAY=10  # Free tier

# ----- Feature Flags -----
FEATURE_NOTES_INGESTION=false  # Pro only
FEATURE_PREMIUM_EXPLANATIONS=false  # Pro only
